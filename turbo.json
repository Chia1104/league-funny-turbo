{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "exp-web#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [".next/**"],
      "env": [
        "NEXTAUTH_SECRET",
        "FACEBOOK_ID",
        "FACEBOOK_SECRET",
        "TWITCH_CLIENT_ID",
        "TWITCH_CLIENT_SECRET",
        "RAILWAY_STATIC_URL",
        "VERCEL_URL",
        "API_URL",
        "UPSTASH_REDIS_URL",
        "UPSTASH_REDIS_TOKEN",
        "TOKEN_EXPIRE",
        "NEXT_PUBLIC_FROALA_KEY"
      ]
    },
    "web#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [".next/**"],
      "env": [
        "NEXTAUTH_SECRET",
        "FACEBOOK_ID",
        "FACEBOOK_SECRET",
        "TWITCH_CLIENT_ID",
        "TWITCH_CLIENT_SECRET",
        "RAILWAY_STATIC_URL",
        "VERCEL_URL",
        "API_URL"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "e2e:chrome": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "e2e:edge": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  },
  "globalDependencies": [
    ".env"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "SHADOW_DATABASE_URL",
    "NODE_ENV"
  ]
}
