{
  "name": "@wanin/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,js,tsx,jsx}\" --fix"
  },
  "devDependencies": {
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@wanin/eslint-config-nextjs": "workspace:0.0.0",
    "@wanin/tailwind-config": "workspace:0.0.0",
    "@wanin/types": "workspace:0.0.0",
    "concurrently": "^7.6.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "tsconfig": "workspace:0.0.0",
    "tsup": "^6.5.0"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.0.2",
    "classnames": "^2.3.2",
    "framer-motion": "^7.6.12",
    "usehooks-ts": "^2.9.1"
  }
}
