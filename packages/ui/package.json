{
  "name": "@wanin/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "concurrently": "^7.4.0",
    "eslint": "^7.32.0",
    "eslint-config-nextjs": "workspace:*",
    "react": "^18.2.0",
    "@wanin/tailwind-config": "workspace:*",
    "tailwindcss": "^3.1.8",
    "tsconfig": "workspace:*",
    "tsup": "^6.2.3",
    "typescript": "^4.5.2",
    "@wanin/types": "workspace:*"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "framer-motion": "^7.3.6",
    "usehooks-ts": "^2.7.1"
  }
}
